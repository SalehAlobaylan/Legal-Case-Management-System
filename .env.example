# General
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"
CORS_ORIGIN="*"

# Database
DATABASE_URL="postgresql://user:password@host:port/dbname"

# Authentication
JWT_SECRET="your_highly_secure_jwt_secret_must_be_at_least_32_chars_long"
JWT_EXPIRES_IN="7d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD="your_redis_password"

# Services
# AI_SERVICE_URL="http://localhost:5000"

# Regulation monitoring worker
REG_MONITOR_ENABLED=true
REG_MONITOR_POLL_SECONDS=60
REG_MONITOR_MAX_CONCURRENCY=5
REG_MONITOR_FAILURE_RETRY_MINUTES=30
REG_SOURCE_SYNC_ENABLED=true
REG_SOURCE_SYNC_INTERVAL_MINUTES=360
REG_SOURCE_MOJ_LISTING_URL=https://laws.moj.gov.sa/ar/legislations-regulations?pageNumber=1&pageSize=9&sortingBy=7
REG_SOURCE_MOJ_MAX_PAGES=5

# Case document extraction + AI-link enrichment
CASE_DOC_EXTRACTION_ENABLED=true
CASE_DOC_EXTRACTION_BATCH_SIZE=20
CASE_DOC_EXTRACTION_MAX_CONCURRENCY=3
CASE_DOC_EXTRACTION_RETRY_MINUTES=20
CASE_DOC_INSIGHTS_ENABLED=true
CASE_DOC_INSIGHTS_BATCH_SIZE=20
CASE_DOC_INSIGHTS_MAX_CONCURRENCY=3
CASE_DOC_INSIGHTS_RETRY_MINUTES=20
CASE_DOC_INSIGHTS_MAX_SOURCE_CHARS=15000
CASE_DOC_INSIGHTS_TOP_K=5
CASE_DOC_RAG_CHUNK_CHARS=1200
CASE_DOC_RAG_CHUNK_OVERLAP_CHARS=180
CASE_DOC_RAG_MAX_CHUNKS=200
CASE_LINK_DOC_MAX_INCLUDED=5
CASE_LINK_DOC_MAX_CHARS_PER_DOC=4000
CASE_LINK_DOC_TOTAL_MAX_CHARS=12000

# Export & Invoice Storage
EXPORT_DIR=./exports
INVOICES_DIR=./invoices

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
FRONTEND_URL=http://localhost:3001
